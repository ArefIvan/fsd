include ../../components/calendar/calendar
include ../../components/dropdown/dropdown
mixin dateTwo(name,fieldTitle)
    .field-dropdown.field-dropdown--date.field-dropdown--date--two
        .field-dropdown__headers
            .field-dropdown__wrap
                .form-element__header
                    .form-element__title.h3=fieldTitle[0]         
                .field-dropdown__header
                    input.field-dropdown__date.field-dropdown__date--one(type="text" name=name[0] placeholder="dd:mm:YYYY")
                    i.material-icons.field-dropdown__icon
            .field-dropdown__wrap
                .form-element__header
                        .form-element__title.h3=fieldTitle[1] 
                .field-dropdown__header
                    input.field-dropdown__date.field-dropdown__date--two(type="text" name=name[1] placeholder="dd:mm:YYYY")
                    i.material-icons.field-dropdown__icon
        .field-dropdown__content 
            +calendar(true)
            .field-dropdown__footer
                button(type="reset").h3.cancel Очистить
                button(type="submit").h3.assept Применить  